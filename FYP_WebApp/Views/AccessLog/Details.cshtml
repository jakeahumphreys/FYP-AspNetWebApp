@model FYP_WebApp.Models.AccessLog

@{
    ViewBag.Title = "Access Log Details";
}

<div class="card rounded shadow mb-3">
    <h5 class="card-header">Access Log (@Model.Id : @Model.TimeStamp)</h5>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TimeStamp)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.TimeStamp)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AttemptedUser)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.AttemptedUser)
            </dd>
        
            <dt>
                @Html.DisplayNameFor(model => model.Message)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Message)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Success)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Success)
            </dd>
        </dl>
        <button class="btn btn-primary" onclick="location.href = '@Url.Action("Index", "AccessLog")';return false;">
            <i class="fa fa-times"></i>
            Close Log
        </button>
    </div>
</div>
