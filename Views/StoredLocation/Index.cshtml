@model IEnumerable<FYP_WebApp.Models.StoredLocation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Label)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Latitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Longitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsInactive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Label)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Latitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Longitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsInactive)
        </td>
        <td>
            <button class="btn btn-info" onclick="location.href = '@Url.Action("Details","StoredLocation", new { id = item.Id })';return false;">Details</button>
            <button class="btn btn-danger" onclick="location.href = '@Url.Action("Delete","StoredLocation", new { id = item.Id })';return false;">Delete</button>
        </td>
    </tr>
}

</table>
