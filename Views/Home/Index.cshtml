@using System.Collections.Specialized
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

@if (Request.IsAuthenticated)
{
    <div class="card">
        <h5 class="card-header">At a glance</h5>
        <div class="card-body">
            <i class="fa fa-envelope"></i>
            <strong>Unread Messages</strong>
            @if (ViewBag.unreadMessages != null)
            {
                if (ViewBag.unreadMessages > 0)
                {
                    <p>You have: @ViewBag.unreadMessages unread messages.</p>
                    <a href="#" class="btn btn-primary">My Messages</a>
                }
                else
                {
                    <p>You're all caught up!</p>
                }
            }
           
        </div>
    </div>
}

