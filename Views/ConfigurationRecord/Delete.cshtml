@model FYP_WebApp.Models.ConfigurationRecord

@{
    ViewBag.Title = "Delete";
}

<div>
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Confirm Delete</h4>
        <p>Are you sure you want to delete this record? It cannot be recovered afterwards.</p>
        <p>You can press 'back' in your browser to cancel this action.</p>
        <hr>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <input type="submit" value="Delete" class="btn btn-danger"/>
            </div>
        }
    </div>
</div>
