@model IEnumerable<FYP_WebApp.Models.Pairing>

@{
    ViewBag.Title = "Index";
}

<h2>Buddy Pairings</h2>
<hr/>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End)
        </th>
        <th>
            <p>User</p>
        </th>
        <th>
            <p>Buddy</p>
        </th>
        <th>
            <p>Status</p>
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.DisplayString)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BuddyUser.DisplayString)
        </td>
        <td>
            @if (item.End < DateTime.Today)
            {
                <span class="badge badge-danger">Expired</span>
            }
            @if (item.Start > DateTime.Today)
            {
                <span class="badge badge-info">Upcoming</span>
            }
            @if (item.Start < DateTime.Today && item.End > DateTime.Today)
            {
                <span class="badge badge-success">Current</span>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
