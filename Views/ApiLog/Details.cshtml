@model FYP_WebApp.Models.ApiLog

@{
    ViewBag.Title = "Details";
}

<head>
    <script src="~/Scripts/highlight.pack.js"></script>
    <link href="~/Content/Highlight/atom-one-light.css" rel="stylesheet" />
    <script src="~/Scripts/highlightInit.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
</head>

<div class="card">
    <div class="card-header">
        API Log
    </div>
    <div class="card-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.LogLevel)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LogLevel)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TimeStamp)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TimeStamp)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.StatusCode)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StatusCode)
                </dd>

            </dl>
        </div>
    </div>
</div>



<div id="accordion">
    <div class="card bg-light rounded">
        <div class="card-header bg-white" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Request
                </button>
            </h5>
        </div>
        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
                <pre>
                   <code>
                        @Html.Raw(Model.RequestString)
                    </code>
                </pre>
            </div>
        </div>
    </div>
    <div class="card bg-light rounded">
        <div class="card-header bg-white" id="headingTwo">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Response
                </button>
            </h5>
        </div>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
            <div class="card-body p-0">
                <pre>
                    <code>
                        @Html.Raw(Model.ResponseString)
                    </code>
                </pre>
            </div>
        </div>
    </div>
</div>
<!--Free to use script by ctwheels (stackoverflow)-->
<script>
    $("pre code").each(function () {
        var html = $(this).html();
        var pattern = html.match(/\s*\n[\t\s]*/);
        $(this).html(html.replace(new RegExp(pattern, "g"), '\n'));
    });
</script>
