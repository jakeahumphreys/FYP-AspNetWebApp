@model FYP_WebApp.Models.TeamDashboardViewModel

@{
    ViewBag.Title = "My Team";
}

<h2>My Team</h2>

<div id="accordion">
    <div class="card">
        <div class="card-header" id="headingMap">
            <h5 class="mb-0">
                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseMap" aria-expanded="true" aria-controls="collapseMap">
                    <i class="fa fa-map"></i>
                    <strong>Team Map</strong>
                </button>
            </h5>
        </div>
        <div id="collapseMap" class="collapse show" aria-labelledby="headingMap" data-parent="#accordion">
            <div class="card-body">
               TEAM_MAP
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header" id="headingMembers">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseMembers" aria-expanded="false" aria-controls="collapseMembers">
                    <i class="fa fa-users"></i>
                    <strong>Team Members</strong>
                </button>
            </h5>
        </div>
        <div id="collapseMembers" class="collapse" aria-labelledby="headingMembers" data-parent="#accordion">
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Members[0].FirstName);
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Members[0].Surname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Members[0].IsInactive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Members[0].Email)
                        </th>
                        <th>
                            <p>Flags</p>
                        </th>
                    </tr>

                    @foreach (var item in Model.Members) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsInactive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @if (item.LockoutEndDateUtc != null)
                                {
                                    <span class="badge badge-danger">Account Locked</span>
                                }
                                @if (item.IsInactive == true)
                                {
                                    <span class="badge badge-dark">Inactive</span>
                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>